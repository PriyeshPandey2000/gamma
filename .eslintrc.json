{
  "extends": [
    "next/core-web-vitals",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/no-unescaped-entities": "off",
    "react/jsx-no-undef": ["error", { "allowGlobals": true }] ,
    "@next/next/no-img-element": "off"
  }
}
