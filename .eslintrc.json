{
  "extends": [
    "next/core-web-vitals",
    "plugin:react/recommended" // Add this line to extend the React recommended rules
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect" // Specify the React version for ESLint to use
    }
  },
  "rules": {
    "react/no-unescaped-entities": "off" // Disable the rule for unescaped entities
  }
}
